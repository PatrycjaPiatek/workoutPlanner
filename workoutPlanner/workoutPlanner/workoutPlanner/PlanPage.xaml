<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="workoutPlanner.PlanPage"
             Background="#e0adf8">
    <ContentPage.Resources>
        <Style TargetType="StackLayout">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#8952b4" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <StackLayout Margin="20,35,20,20">
        <Entry x:Name="nameEntry"
               Placeholder="Enter name"
               BackgroundColor="#48185f"/>
        <Entry x:Name="test" Text="testowanie" TextColor="Green"/>
        <Entry x:Name="detailsEntry"
               Placeholder="Enter details"
               BackgroundColor="#48185f"/>
        <Button Text="Add new plan"
                Clicked="AddPlanClicked" />
        <Button x:Name ="delete"
                Text="Delete selected plan"
                Clicked="DeleteClicked" />
        <Button x:Name ="update"
                Text="Update selected plan"
                Clicked="UpdateClicked" />
        <Button x:Name ="addExerciseToThePlan"
                Text="add exercise to the plan"
                Clicked="addExerciseToThePlan_Clicked"/>
        
        
        
        <CollectionView x:Name="collectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Name}"
                               FontSize="Medium" 
                               TextColor="#48185f"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Details}"
                               TextColor="#48185f"
                               FontSize="Small" />
                        <Label Text="{Binding ID}"
                               TextColor="#48185f"
                               FontSize="Small" />

                        <Label Text="{Binding ExercisesInPlan}"/>
                        <ListView x:Name="listView">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal">
                                            <Grid Padding="10"
                                                  RowDefinitions="Auto, *"
                                                  ColumnDefinitions="Auto, *">
                                                <Image Grid.RowSpan="2"
                                                       Source="{Binding Img}"
                                                       Aspect="AspectFill"
                                                       HeightRequest="60"
                                                       WidthRequest="60" />
                                                <Label Grid.Column="1"
                                                       Text="{Binding Name}"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Row="1"
                                                       Grid.Column="1"
                                                       Text="{Binding Category}"
                                                       VerticalOptions="End" />
                                            </Grid>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>